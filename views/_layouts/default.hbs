<body>
  <div class="container">
    <h1>Anonymous Wikipedia edits</h1>

    <form action="search">
      <div>
        Wikipedia:
        <select name="wikipedia">
          <option value="en">English</option>
          <option value="no">Norwegian</option>
        </select>
      </div>

      <div>
        Editor:
        <select name="editor">
          <option value="no-parliament">Norwegian parliament (Stortinget)</option>
          <option value="no-government-offices">Norwegian government offices</option>
          <option value="no-defense">Norwegian defense</option>
        </select>

      or netmask:
      <input name="netmask" placeholder="10.0.0.0/16">
      </div>
    </form>
  </div>

  {{{body}}}

  {{{block "scripts"}}}
</body>
